 function calcPmt( value ,interest, duration ) {

int2 = interest/1200;
int1 = 1+int2;
r1 = Math.pow(int1, duration);
 
pmt =( value*((int2*r1)/(r1-1)));

    return Math.round(pmt*100)/100;

}
